<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FontoyXamarin.Views.MeteoPage">
    <ContentPage.Content>
        <ScrollView Orientation="Vertical">
            <StackLayout>
                <Label Text="Météo du jour" Font="Bold,20"  />

                <Label Text="Température :" />
                <Label x:Name="TemperatureNow" />

                <Label Text="Pression :" />
                <Label x:Name="PressionNow" />

                <Label Text="Pluie :" />
                <Label x:Name="PluieNow" />

                <Label Text="Vent :" />
                <Label x:Name="VentVitesseNow" />

                <Label Text="Vent direction :" />
                <Label x:Name="VentDirectionNow" />

                <Label Text="Nuages :" />
                <Label x:Name="NebulositeNow" />

                <Label Text="Risque neige : " />
                <Label x:Name="RisqueNeigeNow" />

                <Label Text="____________________________________" />


                <Label Text="Météo du jour (+6h)" Font="Bold,20" />

                <Label Text="Température :" />
                <Label x:Name="TemperatureH6" />

                <Label Text="Créneau +6h :" />
                <Label x:Name="PressionH6" />

                <Label Text="Météo du jour (+12h)" Font="Bold,20" />

                <Label Text="Température :" />
                <Label x:Name="TemperatureH12" />

                <Label Text="Créneau +12h :" />
                <Label x:Name="PressionH12" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
    
