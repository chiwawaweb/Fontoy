<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FontoyXamarin.Views.MeteoPage">
    <ContentPage.Content>
        <Grid Margin="10" RowSpacing="0" ColumnSpacing="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.65*" />
                <RowDefinition Height="0.35*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>

            <Grid Margin="0"
                  RowSpacing="0"
                  Grid.Row="0"
                  Grid.Column="0"
                  Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="12*" />
                    <RowDefinition Height="54*" />
                    <RowDefinition Height="06*" />
                    <RowDefinition Height="15*" />
                    <RowDefinition Height="10*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="50*" />
                </Grid.ColumnDefinitions>

                <Grid Margin="0"
                      RowSpacing="0"
                      Grid.Row="0"
                      Grid.Column="0"
                      Grid.ColumnSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*"/>
                        <ColumnDefinition Width="50*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Margin="0"
                          RowSpacing="0"
                          Grid.Row="0"
                          Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50*" />
                            <RowDefinition Height="50*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="25*"/>
                            <ColumnDefinition Width="75*"/>
                        </Grid.ColumnDefinitions>

                        <Image Grid.Row="0"
                               Grid.Column="0"
                               Grid.RowSpan="2"
                               HorizontalOptions="FillAndExpand"
                               x:Name="VentDirectionImage"/>
                        <Label Grid.Row="0"
                               Grid.Column="1"
                               FontSize="12"
                               FontFamily="sans-serif-light"
                               x:Name="VentVitesseMoyenne"/>
                        <Label Grid.Row="1"
                               Grid.Column="1"
                               FontSize="12"
                               FontFamily="sans-serif-light"
                               x:Name="VentVitesseRafales"/>
                    </Grid>

                    <Grid Margin="0"
                          RowSpacing="0"
                          Grid.Row="0"
                          Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50*" />
                            <RowDefinition Height="50*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0"
                               Grid.Column="0"
                               FontSize="12"
                               FontFamily="sans-serif-light"
                               HorizontalTextAlignment="End"
                               x:Name="Humidite" />
                        <Label Grid.Row="1"
                               Grid.Column="0"
                               FontSize="12"
                               FontFamily="sans-serif-light"
                               HorizontalTextAlignment="End"
                               x:Name="Pression" />
                    </Grid>
                </Grid>

                <Image
                    Grid.Row="1"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    HorizontalOptions="FillAndExpand"
                    x:Name="ConditionsImage">
                </Image>

                <Label
                    Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    FontSize="15"
                    FontFamily="sans-serif-light"
                    HorizontalTextAlignment="Center"
                    x:Name="Conditions" />
                <Label
                    Grid.Row="3"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    FontSize="45"
                    FontFamily="sans-serif-light"
                    FontAttributes="None"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"
                    x:Name="Temperature" />

                <Grid Margin="0"
                      Grid.Row="4"
                      Grid.Column="0"
                      RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>

                    <Image
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="FillAndExpand"
                    Source="meteo_lever_soleil"/>
                    
                    <Label Grid.Row="0"
                       Grid.Column="1"
                       FontSize="15"
                       FontFamily="sans-serif-light"
                       VerticalTextAlignment="Center"
                       x:Name="HoraireLeverSoleil"/>

                </Grid>

                <Grid Margin="0"
                      Grid.Row="4"
                      Grid.Column="1"
                      RowSpacing="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50*" />
                        <ColumnDefinition Width="50*" />
                    </Grid.ColumnDefinitions>
                    <Image
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="FillAndExpand"
                    Source="meteo_coucher_soleil"/>

                    <Label Grid.Row="0"
                       Grid.Column="1"
                       FontSize="15"
                       FontFamily="sans-serif-light"
                       VerticalTextAlignment="Center"
                       x:Name="HoraireCoucherSoleil"/>
                </Grid>
            </Grid>

            <Frame 
                Grid.Row="1"
                Grid.Column="0"
                OutlineColor="#CCCCCC"
                CornerRadius="5"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Margin="0"/>

            <Frame 
                Grid.Row="1"
                Grid.Column="1"
                OutlineColor="#CCCCCC"
                CornerRadius="5"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Margin="0"/>
            </Grid>

    </ContentPage.Content>
</ContentPage>
    
