<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FontoyXamarin.Views.MeteoPage">
    <ContentPage.Content>
        <Grid Margin="10" RowSpacing="0" ColumnSpacing="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.65*" />
                <RowDefinition Height="0.35*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition Width="0.5*" />
            </Grid.ColumnDefinitions>

            <Grid Margin="0"
                  Grid.Row="0"
                  Grid.Column="0"
                  Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.75*" />
                    <RowDefinition Height="0.25*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.6*" />
                    <ColumnDefinition Width="0.4*" />
                </Grid.ColumnDefinitions>

                <Image
                    Grid.Row="0"
                    Grid.Column="0"
                    HorizontalOptions="FillAndExpand"
                    x:Name="ConditionsImage">
                    
                </Image>
                

                <Grid ColumnSpacing="0" RowSpacing="0"
                      Grid.Row="0"
                      Grid.Column="1"
                      Grid.RowSpan="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="20*" />
                        <RowDefinition Height="05*" />
                        <RowDefinition Height="05*" />
                        <RowDefinition Height="60*" />
                        <RowDefinition Height="05*" />
                        <RowDefinition Height="05*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="0.6*" />
                        <ColumnDefinition Width="0.4*" />
                    </Grid.ColumnDefinitions>
                    
                    <!-- Direction du vent -->
                    <Image
                        Grid.Row="0"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        HorizontalOptions="FillAndExpand"
                        x:Name="VentDirection">
                    </Image>
                    
                    <!-- Vitesse vent moyen -->
                    <Label Margin="0"
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="Moyen :"
                        FontSize="12"
                        HorizontalTextAlignment="End" />
                    <Label
                        Margin="0"
                        Grid.Row="1"
                        Grid.Column="1"
                        x:Name="VentVitesseMoyenne"
                        FontSize="12"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="End" />
                    
                    <!-- Vitesse vent rafales -->
                    <Label
                        Grid.Row="2"
                        Grid.Column="0"
                        Text="Rafales :"
                        FontSize="12"
                        HorizontalTextAlignment="End" />
                    <Label
                        Grid.Row="2"
                        Grid.Column="1"
                        x:Name="VentVitesseRafales"
                        FontSize="12"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="End" />
                    <Label
                        Grid.Row="4"
                        Grid.Column="0"
                        Text="Humidité :"
                        FontSize="12"
                        HorizontalTextAlignment="End" />
                    <Label
                        Grid.Row="4"
                        Grid.Column="1"
                        x:Name="HumiditeNow"
                        FontSize="12"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="End" />
                    <Label
                        Grid.Row="5"
                        Grid.Column="0"
                        Text="Pression :"
                        FontSize="12"
                        HorizontalTextAlignment="End" />
                    <Label
                        Grid.Row="5"
                        Grid.Column="1"
                        x:Name="PressionNow"
                        FontSize="12"
                        FontAttributes="Bold"
                        HorizontalTextAlignment="End" />


                </Grid>
                
                <!--<Image
                    Grid.Row="0"
                    Grid.Column="1"
                    Grid.RowSpan="2"
                    HorizontalOptions="FillAndExpand"
                    x:Name="VentDirection" >
                </Image>-->
