            </Grid>

            <Frame 
                Grid.Row="1"
                Grid.Column="0"
                OutlineColor="#ff99cc"
                BackgroundColor="#ff99cc"
                CornerRadius="5"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Padding="0"
                Margin="0"/>

            <Frame 
                Grid.Row="1"
                Grid.Column="1"
                OutlineColor="#0099cc"
                BackgroundColor="#0099cc"
                CornerRadius="5"
                HorizontalOptions="FillAndExpand"
                VerticalOptions="FillAndExpand"
                Padding="0"
